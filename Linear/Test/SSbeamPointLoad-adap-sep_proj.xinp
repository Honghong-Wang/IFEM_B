<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- Basic 1D elastic beam test.
     Simply supported beam with central point. !-->

<simulation>

  <geometry>
    <raiseorder basis="projection" patch="1" u="1"/>
    <refine basis="projection" patch="1" u="3"/>
    <raiseorder basis="projection" patch="1" u="1"/>
    <raiseorder patch="1" u="1"/>
    <refine patch="1" u="3"/>
    <topologysets>
      <set name="ends" type="vertex">
        <item patch="1">1 2</item>
      </set>
    </topologysets>
  </geometry>

  <boundaryconditions>
    <dirichlet set="ends" comp="1"/>
  </boundaryconditions>

  <discretization>
    <nGauss default="-2"/>
  </discretization>

  <EulerBernoulli>
    <isotropic E="1.2" thickness="0.01"/>
    <pointload xi="0.5" onElement="true">1.0</pointload>
  </EulerBernoulli>

  <postprocessing>
    <projection>
      <cgl2/>
    </projection>
    <resultpoints>
      <point patch="1" u="0.5"/>
    </resultpoints>
  </postprocessing>

  <adaptive>
    <beta type="maximum">90.0</beta>
    <errtol>0.0001</errtol>
    <maxdof>100000</maxdof>
    <maxstep>200</maxstep>
  </adaptive>

</simulation>
