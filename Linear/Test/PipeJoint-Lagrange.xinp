<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- Pipe joint with shear-loaded brace.
     Static linear-elastic analysis.
     10-patch model, cubic Lagrange elements. !-->

<simulation>

  <discretization type="Lagrange"/>

  <geometry>
    <patchfile>pipe_bifurcation.g2</patchfile>
    <topology>
      <connection master="1" mface="2" slave="6" sface="2" orient="1"/>
      <connection master="1" mface="3" slave="2" sface="4"/>
      <connection master="1" mface="4" slave="3" sface="3"/>
      <connection master="2" mface="3" slave="3" sface="4"/>
      <connection master="2" mface="2" slave="7" sface="2" orient="2"/>
      <connection master="3" mface="2" slave="9" sface="2" orient="2"/>
      <connection master="4" mface="4" slave="5" sface="3"/>
      <connection master="4" mface="3" slave="6" sface="4"/>
      <connection master="4" mface="2" slave="8" sface="2" orient="1"/>
      <connection master="5" mface="4" slave="6" sface="3"/>
      <connection master="5" mface="2" slave="10" sface="2" orient="1"/>
      <connection master="7" mface="4" slave="9" sface="3"/>
      <connection master="7" mface="3" slave="10" sface="4"/>
      <connection master="8" mface="4" slave="10" sface="3"/>
      <connection master="8" mface="3" slave="9" sface="4"/>
    </topology>
    <topologysets>
      <set name="major-pipe-endface" type="face">
        <item patch="1"> 1 </item>
        <item patch="2"> 1 </item>
        <item patch="3"> 1 </item>
        <item patch="4"> 1 </item>
        <item patch="5"> 1 </item>
        <item patch="6"> 1 </item>
      </set>
      <set name="minor-pipe-endface" type="face">
        <item patch="7"> 1 </item>
        <item patch="8"> 1 </item>
        <item patch="9"> 1 </item>
        <item patch="10">1 </item>
      </set>
    </topologysets>
  </geometry>

  <boundaryconditions>
    <dirichlet set="major-pipe-endface" comp="123"/>
    <neumann set="minor-pipe-endface" type="constant" direction="1">1.0e8</neumann>
  </boundaryconditions>

</simulation>
